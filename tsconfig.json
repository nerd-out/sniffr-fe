{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src/",
    "paths": {
      "sniffr-assets": ["./assets"],
      "sniffr-components": ["./components"],
      "sniffr-constants": ["./constants"],
      "sniffr-pages": ["./pages"],
      "sniffr-redux": ["./redux"],
      "sniffr-routes": ["./routes"],
      "sniffr-types": ["./types"],
      "sniffr-utils": ["./utils"]
    }
  },
  "include": ["src"]
}
